<header class="header">
    <a href="#test">
        {{>logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">

    {{#with info}}
    <div class="info">
        <strong class="info_title">{{title}}</strong>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" class="form_input" placeholder="{{placeholder}}" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}" />
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="form_divider"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <strong class="updates_title">{{title}}</strong>
    {{#each list}}
    {{!-- <div class="updates_list">
        <img src="https://picsum.photos/32/32" alt="avatar user" class="updates_list_avatar">
        <div class="update_list_post">
            <div class="update_list_post_nickname">{{nickname}}</div>
            <div class="update_list_post_description">{{description}}</div>
        </div>
    </div> --}}
    {{>PostUpdates data=this}}
    {{/each}}
    <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="experience">
    <div class="experience_modal">{{badge}}</div>
    <strong class="experience_title">{{title}}</strong>
    <div class="experience_card">
        {{#each list}}
        <div class="experience_card_item">
            <div class="experience_list_name">{{name}}</div>
            <p class="experience_list_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}

<footer class="footer" id="test">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>